.tab-h{
    height: 80rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #F7F7F7; font-size: 16px; white-space: nowrap;position: fixed;top: 0; left: 0; z-index: 99;transition: 2s all linear;background: #e4617d;}
.tab-item{margin:0 30rpx;display: inline-block;transition: 0.2s all linear;font-size: 28rpx;color: #eeaebe;}
.tab-item.active{color: #ffffff;position: relative;}
.item-ans{ width: 100%;display: flex; flex-grow: row no-wrap;justify-content: space-between; padding: 30rpx;box-sizing: border-box; height: 180rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;} 
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12rpx;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
.scoll-h{display: block;}
.dropDown{margin-top: 80rpx;font-size: 26rpx;line-height: 60rpx;color: #929292;box-shadow: 0px 5rpx 5rpx 0 #edebec;position: relative;z-index: 2;background: #fff;}
.dropDown span:nth-of-type(1){margin-left: 30rpx}
.dropDown i::after{font-family: 'iconfont';content: '\e6a6';font-size: 34rpx;vertical-align: middle;}
.pinkSearch{float: right;line-height: 26rpx;margin: 17rpx 30rpx 0 0;}
.selectMenu-detail{display:block;padding:0 30rpx ;width: 100%;background: #fff;height: 0;overflow:hidden;transition: 0.2s all linear;position: absolute;top: 80rpx;}
.selectMenu-detail li{line-height:90rpx;display:block;width: 92%;color: #000;padding:0 10rpx ;}
.selectMenu-detail li:not(:last-child){border-bottom: 1px solid #ccc;}
.coverShadow{background: rgba(0, 0, 0, 0.3);height: 0;position: absolute;bottom:0;width: 100%;transition: 0.1s all linear;z-index: 1;}
.tab-content{display: block;}
.content-detail{height: 445rpx;padding-top: 30rpx;}
.detail-time{width: 86rpx;height: 30rpx;background:#eceaeb;line-height:30rpx;text-align:center;margin:0 auto;font-size: 16rpx;color: #000;border-radius: 4rpx;}
.userImg{width: 80rpx;height: 80rpx;padding:10rpx;background: #fff;float: left;margin-left: 20rpx; }
.userName{font-size: 18rpx;color: #9a999a;line-height:80rpx ;display: inline-block;float: left;margin-left: 28rpx;}
.detail-box{background: #fff;position: relative;height: 266rpx; padding:54rpx 30rpx 30rpx;margin-top:60rpx ;box-shadow:0px 0px 12rpx 0 #eceaec; }
.userInfo{position: absolute;top:-60rpx ;}
.detail-box text{display:block;font-size: 22rpx;color: #363636;line-height: 44rpx;height: 132rpx;overflow: hidden;word-break:break-all;display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 3;
overflow: hidden;}
.salaryAndWork{margin: 40rpx 0;height: 34rpx;}
.salaryAndWork i{font-size: 34rpx;color: #e4617d;}
.salaryAndWork i::before{font-family: 'iconfont';content: '\e702';font-size: 34rpx;color: #e4617d;}
.salaryAndWork view{font-size: 22rpx;line-height:34rpx;color: #e4617d;padding:0 22rpx;float: right;border: 2px solid #e4617d;border-radius: 24rpx;}
.locationAndDate{font-size: 22rpx;color: #a1a1a1;}
.locationAndDate .location::before{font-family: 'iconfont';content: '\e715';padding-right: 10rpx;}
.locationAndDate .date{margin-left: 56rpx;}
.locationAndDate .date::before{font-family: 'iconfont';content: '\e829';padding-right: 10rpx;}
.locationAndDate .more{float: right;line-height:20rpx ;}


